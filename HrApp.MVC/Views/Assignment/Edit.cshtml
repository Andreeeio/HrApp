@using HrApp.Application.Assignment.Command.EditAssignment
@model EditAssignmentCommand

@{
    ViewData["Title"] = "Edit Assignment";
}

<h2>Edit Assignment</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DifficultyLevel" class="control-label"></label>
        <input asp-for="DifficultyLevel" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="DifficultyLevel" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="ShowNotFreeAssignments" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
