@model HrApp.Application.Department.Command.AddDepartment.AddDepartmentCommand

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Department</h4>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeadOfDepartmentEmail" class="control-label"></label>
                <input asp-for="HeadOfDepartmentEmail" class="form-control" />
                <span asp-validation-for="HeadOfDepartmentEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamTag" class="control-label"></label>
                <input asp-for="TeamTag" class="form-control" />
                <span asp-validation-for="TeamTag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />

<div>
    <form asp-action="Index" method="get" style="display:inline;">
        <button type="submit" class="btn btn-secondary">Back to List</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
