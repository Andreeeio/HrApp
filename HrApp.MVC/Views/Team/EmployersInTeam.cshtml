@using HrApp.Application.Users.DTO
@model List<UserDTO>

<table class="table">
    <thead>
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Email</th>
            <th>Data Urodzenia</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.DateOfBirth.ToString("dd-MM-yyyy")</td>
                <td>
                    <a asp-controller="User" asp-action="Details" asp-route-id="@user.Email">Szczegóły</a> |
                    <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Email">Edytuj</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
}
