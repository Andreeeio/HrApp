@using HrApp.Application.Calendars.DTO
@model List<CalendarDTO>
@{
    ViewBag.Title = "Wydarzenia z Google Kalendarza";
}

<h2>@ViewBag.Title</h2>

@if(!Model.Any())
{
    <p>Brak wydarzeń do wyświetlenia.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tytuł</th>
                <th>Opis</th>
                <th>Start</th>
                <th>Koniec</th>
                <th>Utworzone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.EndDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}

