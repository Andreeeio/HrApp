@using HrApp.Application.Users.DTO
@model UserDTO

@{
    ViewData["Title"] = "Manage user";
}

<h1>Menage page for user:</h1>

<h2>@Model.Email</h2>

<div class="d-flex flex-column gap-3">

    <div class="d-flex gap-2">
        <div>
            <a asp-controller="User" asp-action="EditRole" asp-route-email="@Model.Email" class="btn btn-outline-secondary">Edit Role</a>
        </div>

        <div>

            <a asp-controller="User" asp-action="EditUser" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Edit User</a>
        </div>
    </div>

    <div class="d-flex gap-2">
        <div>
            @if (@Model.Paid != null)
            {
                <a asp-controller="Salary" asp-action="EditPaid" asp-route-id="@Model.Email" class="btn btn-outline-secondary">Edit Paid</a>
            }
            else
            {
                <a asp-controller="Salary" asp-action="AddPaid" asp-route-email="@Model.Email" class="btn btn-outline-secondary">Add Paid</a>
            }
        </div>
        <div>
            <a asp-controller="EmploymentHistory" asp-action="Create" asp-route-email="@Model.Email" class="btn btn-outline-secondary">Change employment history</a>
        </div>
    </div>

</div>