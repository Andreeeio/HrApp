@using HrApp.Application.EmploymentHistories.Command.AddEmploymentHistory
@model AddEmploymentHistoryCommand

@{
    ViewData["Title"] = "Add Employment History";
    var text = ViewData["Email"];
}

<h2>Add Employment History</h2>

<form asp-action="CreateEmpHist" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" value="@text"/>
        <span asp-validation-for="Email" class="text-danger" />
    </div>

    <div class="form-group">
        <label asp-for="Position"></label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
        <span asp-validation-for="StartDate" class="text-danger" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<div asp-validation-summary="All" class="text-danger"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
